<p>Title: <%= post.title %></p>
<p>Topic:  <%= post.topic %></p>
<p>Content: <%= post.content %></p>
<p>Author: <%= JSON.stringify(post.author) %></p>
<p>Created: <%= post.createdAt %></p>
<p>Updated: <%= post.updatedAt %></p>
<p>Public: <%= post.public %></p>
<p>Published: <%= post.publishedAt %></p>
<p>Total Views: <%= post.totalViews %></p>
<p>Unique Views: <%= post.uniqueViews %></p>

<div id="comments">
    <% if (post.comments && post.comments.length > 0) { %>
        <% post.comments.forEach(comment => { %>
            <p><%= JSON.stringify(comment) %></p>
        <% }) %>
    <% } else { %>
        <p>No comments yet</p>
    <% } %>
</div>

<% if (user.authenticated) { %>
    <label for="comment-content">Write a comment</label>
    <textarea id="comment-content" placeholder="Write a comment"></textarea>

    <label for="comment-parent">Parent</label>
    <input id="comment-parent" type="text" placeholder="Parent ID">
    
    <button id="comment-submit">Submit</button>
<% } %>

