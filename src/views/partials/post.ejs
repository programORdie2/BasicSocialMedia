<p>Title: <%= post.title %></p>
<p>Topic:  <%= post.topic %></p>
<p>Content: <%= post.content %></p>
<p>Author: <%= JSON.stringify(post.author) %></p>
<p>Created: <%= post.createdAt %></p>
<p>Updated: <%= post.updatedAt %></p>
<p>Public: <%= post.public %></p>
<p>Published: <%= post.publishedAt %></p>
<p>Total Views: <%= post.totalViews %></p>
<p>Unique Views: <%= post.uniqueViews %></p>

<div id="reactions">
    <% if (post.reactions && post.reactions.length > 0) { %>
        <% post.reactions.forEach(reaction => { %>
            <p><%= JSON.stringify(reaction) %></p>
        <% }) %>
    <% } else { %>
        <p>No reactions yet</p>
    <% } %>
</div>

<% if (user.authenticated) { %>
    <label for="reaction-content">Write a reaction</label>
    <textarea id="reaction-content" placeholder="Write a reaction"></textarea>
    <button id="reaction-submit">Submit</button>
<% } %>

